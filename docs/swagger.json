{
    "swagger": "2.0",
    "info": {
        "description": "This is a Pet project to learn Golang, used Postgresql",
        "title": "Book Shelf API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "https://www.linkedin.com/in/ramazan-bolatkhan-a852321b8/",
